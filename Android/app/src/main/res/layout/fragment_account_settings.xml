<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:id="@+id/crouton_handle"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginTop="@dimen/all_toolbar_height"
        android:background="@null" />

    <android.support.v7.widget.Toolbar
            android:id="@+id/accountSettingsToolbar"
            android:layout_height="@dimen/all_toolbar_height"
            android:layout_width="match_parent"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp"
            android:background="@color/registration_toolbar_background"
            app:theme="@style/RegistrationToolbarTheme"
            />

        <ListView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:headerDividersEnabled="false"
            android:footerDividersEnabled="false"
            android:divider="@color/transparent"
            android:listSelector="@color/transparent"
            android:id="@+id/account_settings_listview"
            android:layout_below="@+id/accountSettingsToolbar"
            >
        </ListView>
</RelativeLayout>
