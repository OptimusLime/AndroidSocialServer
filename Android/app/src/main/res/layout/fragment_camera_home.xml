<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <FrameLayout
        android:id="@+id/camera_crouton_handle"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_marginTop="@dimen/all_toolbar_height"
        android:background="@null" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/cameraHomeToolbar"
        android:layout_height="@dimen/all_toolbar_height"
        android:layout_width="match_parent"
        android:layout_marginBottom="0dp"
        android:paddingBottom="0dp"
        android:background="@color/registration_toolbar_background"
        app:theme="@style/RegistrationToolbarTheme"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:padding="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/image_view_background"
                android:src="@drawable/camsilhouette"
                android:id="@+id/launch_camera_button"/>
            <!--<ImageButton-->
            <!--android:padding="10dp"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_width="75dp"-->
            <!--android:layout_height="75dp"-->
            <!--android:background="@drawable/image_view_background"-->
            <!--android:src="@drawable/galleryicon"-->
            <!--android:id="@+id/launch_gallery_button"/>-->
            <ImageButton
                android:padding="10dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/image_view_background"
                android:src="@drawable/galleryicon"
                android:id="@+id/launch_iec_button"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/camera_image_preview"/>

        <jp.co.cyberagent.android.gpuimage.GPUImageView
            android:id="@+id/gpuimage"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
