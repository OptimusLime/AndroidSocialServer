<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/listViewItem"
    android:background="@drawable/as_list_item_selector"
    >
    <View
        android:id="@+id/as_item_separator"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        style="@style/listViewDividerStyle" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:focusable="false"
         android:layout_above="@+id/as_item_separator"
         >
         <TextView
             android:textIsSelectable="false"
             android:focusable="false"
             android:id="@+id/as_item_header"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             style="@style/listViewPrimaryDetail"
             android:text="STUFF STUFF STUFF"
             />
         </LinearLayout>


</RelativeLayout>